<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".secondactivity">

    <TextView
        android:id="@+id/textView10"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="RECIEPT"
        android:padding="10dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/showname"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Name displayed"
        android:padding="5dp" />

    <TextView
        android:id="@+id/showphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:hint="Phone number displayed"
        android:padding="5dp" />

    <TextView
        android:id="@+id/showplates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:hint="Plates displayed"
        android:padding="5dp" />

    <TextView
        android:id="@+id/showcost"
        android:layout_width="224dp"
        android:layout_height="104dp"
        android:textSize="45sp"
        android:gravity="center"
        android:textColor="@color/Negative"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="45dp"
        android:hint="Cost"
        android:padding="5dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnexit"
            android:layout_width="131dp"
            android:layout_height="87dp"
            android:layout_marginTop="115dp"
            android:text="Exit"
            android:background="@color/Negative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>